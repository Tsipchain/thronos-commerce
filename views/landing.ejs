<!DOCTYPE html>
<html lang="<%= lang %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thronos Commerce</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>Thronos Commerce</h1>
      <p class="subtitle">Multi-tenant · Web3-ready e-commerce platform</p>
    </header>

    <main>
      <section class="hero">
        <h2><%= t('landing.hero') %></h2>
      </section>

      <section class="product-list">
        <% packages.forEach(function(pkg){ %>
          <article class="product-card">
            <h3><%= pkg.title %></h3>
            <p><%= pkg.description %></p>
            <ul>
              <% pkg.features.forEach(function(feature){ %>
                <li><%= feature %></li>
              <% }) %>
            </ul>
          </article>
        <% }) %>
      </section>

      <section class="admin-block">
        <h2><%= t('landing.offer') %></h2>
        <% if (message) { %><p class="admin-msg success"><%= message %></p><% } %>
        <form method="POST" action="/thronos-commerce/offer" class="checkout-form">
          <label><%= t('landing.name') %>
            <input type="text" name="name" required />
          </label>
          <label><%= t('landing.email') || 'Email' %>
            <input type="email" name="email" required />
          </label>
          <label><%= t('landing.phone') %>
            <input type="text" name="phone" required />
          </label>
          <label><%= t('landing.brand') %>
            <input type="text" name="brand" required />
          </label>
          <label><%= t('landing.domain') %>
            <input type="text" name="domain" placeholder="π.χ. fashionmm.gr" />
          </label>
          <label><%= t('landing.productsCount') %>
            <input type="number" name="products" min="1" />
          </label>
          <label><%= t('landing.package') %>
            <select name="packageId" required>
              <% packages.forEach(function(pkg){ %>
                <option value="<%= pkg.id %>"><%= pkg.title %></option>
              <% }) %>
            </select>
          </label>
          <label><%= t('landing.message') %>
            <textarea name="message" rows="4"></textarea>
          </label>
          <button class="button" type="submit"><%= t('landing.send') %></button>
        </form>
      </section>
    </main>
  </body>
</html>
